<assembly>
    <id>zip</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/deployment/config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>**/*.yml</include>
                <include>**/*.txt</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/deployment/store</directory>
            <outputDirectory>store</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>bin</outputDirectory>
        </file>
    </files>
</assembly>